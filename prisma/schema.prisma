  due         Float          @default(0)
  bricksMade  Int            @default(0)
  daysWorked  Int            @default(0)
  payments    LaborPayment[]
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
}

model LaborPayment {
  id        String   @id @default(uuid())
  amount    Float
  date      DateTime @default(now())
  laborId   String
  labor     Labor    @relation(fields: [laborId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Expense {
  id          String   @id @default(uuid())
  description String
  amount      Float
  category    String
  date        DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Sale {
  id             String   @id @default(uuid())
  vehicleNo      String
  quantity       Int
  rate           Float
  totalAmount    Float
  receivedAmount Float
  billPath       String?
  brickType      String   @default("No.1") // New field
  date           DateTime @default(now())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model BrickStock {
  id        String   @id @default(uuid())
  type      String   @unique // "No.1", "No.2", "No.3"
  quantity  Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
