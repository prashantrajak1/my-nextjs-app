generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // Use DATABASE_URL, which you already have in Vercel
  url       = env("DATABASE_URL")
  // You can add directUrl if you later configure a non-pooling URL, but it's optional
  // directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Labor {
  id        String   @id @default(uuid())
  name      String
  address   String
  due       Float    @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Expense {
  id          String   @id @default(uuid())
  description String
  amount      Float
  category    String
  date        DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Sale {
  id             String   @id @default(uuid())
  vehicleNo      String
  quantity       Int
  rate           Float
  totalAmount    Float
  receivedAmount Float
  date           DateTime @default(now())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
