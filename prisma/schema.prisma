generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL") // Vercel Postgres uses this env var
  directUrl = env("POSTGRES_URL_NON_POOLING") // Recommended for Vercel
}

model Labor {
  id        String   @id @default(uuid())
  name      String
  address   String
  due       Float    @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Expense {
  id          String   @id @default(uuid())
  description String
  amount      Float
  category    String
  date        DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Sale {
  id             String   @id @default(uuid())
  vehicleNo      String
  quantity       Int
  rate           Float
  totalAmount    Float
  receivedAmount Float
  date           DateTime @default(now())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
