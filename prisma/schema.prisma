generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Labor {
  id            String                @id @default(uuid())
  name          String
  address       String
  due           Float                 @default(0)
  bricksMade    Int                   @default(0)
  brickRate     Float                 @default(0)
  daysWorked    Int                   @default(0)
  payments      LaborPayment[]
  manufacturing BrickManufacturing[]
  createdAt     DateTime              @default(now())
  updatedAt     DateTime              @updatedAt
  dailyRecords  LaborDailyRecord[]
}

model LaborDailyRecord {
  id          String   @id @default(uuid())
  date        DateTime @default(now())
  bricksMade  Int      @default(0)
  brickRate   Float    @default(0)
  payment     Float    @default(0)
  isPaid      Boolean  @default(false)
  laborId     String
  labor       Labor    @relation(fields: [laborId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  expenseId   String?  @unique
  expense     Expense? @relation(fields: [expenseId], references: [id])
}

model LaborPayment {
  id        String   @id @default(uuid())
  amount    Float
  date      DateTime @default(now())
  laborId   String
  labor     Labor    @relation(fields: [laborId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Expense {
  id               String            @id @default(uuid())
  description      String
  amount           Float
  category         String
  date             DateTime          @default(now())
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  laborDailyRecord LaborDailyRecord?
}

model Sale {
  id             String   @id @default(uuid())
  vehicleNo      String
  quantity       Int
  rate           Float
  totalAmount    Float
  receivedAmount Float
  billPath       String?
  brickType      String   @default("Normal")
  date           DateTime @default(now())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model BrickStock {
  id        String   @id @default(uuid())
  type      String   @unique
  quantity  Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model BrickManufacturing {
  id        String   @id @default(uuid())
  brickType String   // "No.1", "No.2", or "No.3"
  quantity  Int
  date      DateTime @default(now())
  laborId   String?
  labor     Labor?   @relation(fields: [laborId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
